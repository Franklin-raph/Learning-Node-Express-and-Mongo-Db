<div class="container w-50">
    <div class="card card-body">
    <h1>Register User</h1>
    <%- include('../partials/msg.ejs') %> 
    <form action="/users/register" method="POST">
        <div class="form-group">

            <label class="mt-3">Name</label>
            <input type="text" placeholder="test"  class="form-control" name="name" id="" required>
            
            <label class="mt-3">Email</label>
            <input type="email" placeholder="test@test.com" class="form-control" name="email" id="" required>

            <label class="mt-3">Password</label>
            <input type="password" placeholder="****" class="form-control" name="password" id="" required>

            <label class="mt-3">Confirm Password</label>
            <input type="password" placeholder="****" class="form-control mb-2" name="password2" id="" required>
            

            <input type="submit" class="form-control btn-danger mt-3"  value="Register">
        </div>
    </form>
